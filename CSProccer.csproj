<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Mutagen.Bethesda.Skyrim" Version="0.52.0" />
    <PackageReference Include="Mutagen.Bethesda.Synthesis" Version="0.35.3" />
    <ToCopy Include="static\**\*" CopyToOutputDirectory="Always" />
    <ToCopy Include="src\settings\**\*" CopyToOutputDirectory="Always" />
  </ItemGroup>

  <Target Name="CopyFolders" AfterTargets="Build">
    <Copy SourceFiles="@(ToCopy)" DestinationFolder="$(OutputPath)\%(RecursiveDir)" SkipUnchangedFiles="false" />
  </Target>
</Project>
